<main class="container">
  <div class="container mt-4">
  <h1>Hoja de vida de equipos</h1>
</div>

<div class="container">
    <h3>Equipos</h3>
    <hr>
</div>

<!-- %%%%%%%%%%%%%% Boton Modal %%%%%%%%%%%%%% -->
<div class="d-grid gap-2 d-md-flex justify-content-md-end">
  <button class="btn btn-primary me-md-2" type="button" data-bs-toggle="modal" data-bs-target="#formModal">Agregar
    Equipo</button>
</div>

<!-- %%%%%%%%%%%%%% Modal %%%%%%%%%%%%%% -->
<!-- %%%%%%%%%%%%%% header Modal %%%%%%%%%%%%%% -->
{{#each errors }}

<div class="alert alert-danger alert-dismissible fade show" role="alert">
  {{text}}
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>

{{/each}}

{{>modalForm}}


<table class="table table-striped">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">nombre</th>
      <th scope="col">Marca</th>
      <th scope="col">Modelo</th>
      <th scope="col">Serial</th>
      <th scope="col">Proveedor</th>
      <th scope="col">Descripci√≥n</th>
      <th scope="col">Acciones</th>
    </tr>
  </thead>
  <tbody>
    {{#each equipos }}
    
    
    <tr>
      
      <th scope="row">{{@index}}</th>
      <td><a href="/equipos/view/{{_id}}">{{nombre}}</a></td>
      <td>{{marca}}</td>
      <td>{{modelo}}</td>
      <td>{{serial}}</td>
      <td>{{proveedor.nombre}}</td>
      <td>{{descripcion}}</td>
      <td>        
        <a href="/equipos/edit/{{_id}}" ><i class="fas fa-edit"></i></a>
      <a href="/equipos/view/{{_id}}"><i class="fas fa-eye"></i></a>
      </td>

    </tr>
    
    {{/each}}    

    
  </tbody>
</table>
</main>